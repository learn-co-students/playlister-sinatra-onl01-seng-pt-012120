<div class="row">
	<div class="col-sm-4 offset-sm-4">
		<div class="list-group text-center">
		<h2>Genre List</h2>
		<% @genres.each do |genre| %>

			<a href="/genres/<%= genre.slug %>" class="list-group-item list-group-item-action"> <%= genre.name.capitalize %> &mdash; <span class="badge badge-secondary badge-pill"><%= genre.songs.count %></span> songs</a>

		<% end %>

		</div>
	</div>
</div>

