<div class="list-group">
<h2>Song List</h2>
<% @songs.each do |song| %>

	<a href="/songs/<%= song.slug %>" class="list-group-item list-group-item-action"><i class="fas fa-music mr-2"></i> "<%= song.name %>" - <%= song.artist.name %> - <%= song.genres.collect {|genre| genre.name.capitalize}.join(", ") %></a>

<% end %>

</div>