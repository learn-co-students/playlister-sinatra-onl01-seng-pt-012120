
<div class="row">
	<div class="col-sm-6 offset-sm-3">
		<div class="card mb-3" style="">
			<div class="row no-gutters">
				<div class="col-md-4">
					<i class="fas fa-microphone-alt fa-7x card-img m-4"></i>

				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title"><%= @artist.name %></h5>
						<p class="card-text"><small class="text-muted"> Genre(s) // 

							<% @genres.each do |genre| %>
								<a href="/genres/<%= genre.slug %>"><%= genre.name %></a> 
							<% end %>
								
							</small></p>
						<ul class="list-group list-group-flush">
							<% @artist.songs.each.with_index(1) do |song, index| %>
							<li class="list-group-item"><%= index %>. <a href="/songs/<%= song.slug %>"><%= song.name %></a> </li>
							<% end %>
						</ul>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
